<div class="row">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Sample Upload Pics</h1>
    </div>

    <div class="col-lg-12">
        <!-- Basic Card Example -->
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Sample Upload Pics</h6>
            </div>
            <div class="card-body">
                @Html.Raw(ViewBag.Message)
                <form method="post" enctype="multipart/form-data" action="UploadFilePics" class="form-inline">
                    <div class="form-group">
                        <label for="file">Select Picture:</label>
                        <input type="file" class="form-control-file" name="file">
                    </div>
                    <button type="submit" class="btn btn-outline-primary btn-sm">Upload</button>
                </form>
            </div>
        </div>

    </div>

</div>
